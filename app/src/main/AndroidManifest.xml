<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lite.lite">

    <supports-screens
        android:smallScreens="true"
        android:normalScreens="true"
        android:largeScreens="true">
    </supports-screens>

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"></uses-permission>
    <application
        android:allowBackup="true"
        android:largeHeap="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/pencil_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/pencil_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-1702769818665564~4271376834"/>

        <activity android:name="com.to_do.lite.create_item"></activity>
        <activity android:name="com.to_do.lite.MainActivity"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <receiver android:name="com.com.to_do.myfirstapplication.AlertReceiver">

        </receiver>
    </application>

</manifest>