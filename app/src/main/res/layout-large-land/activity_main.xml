<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#3385ff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentDate"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/currentTime"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.4"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/toDoSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="switchToDo"
            android:text="To Do"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/completedSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="switchCompleted"
            android:text="Completed"
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/overdueSection"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="switchOverdue"
            android:text="Overdue"
            android:textSize="18sp"
            android:textColor="#000000" />

    </LinearLayout>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="6" />

    <ImageButton
        android:id="@+id/createItemButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/add_button_border"
        android:onClick="actionButtonPressed"
        android:src="@drawable/add_icon" />

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        ads:adSize="LEADERBOARD"
        ads:adUnitId="ca-app-pub-1702769818665564/6075892027">
    </com.google.android.gms.ads.AdView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">

        <TextView
            android:id="@+id/rate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_daily"
            android:gravity="center"
            android:text="rate me"
            android:layout_marginRight="10dp"
            android:textSize="22sp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/gopro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_border_yearly"
            android:gravity="center"
            android:text="remove ads"
            android:textSize="22sp"
            android:textColor="#ffffff"/>
    </LinearLayout>

</LinearLayout>